		"rollup-plugin-peer-deps-external": "2.2.4",
		"rollup-plugin-terser": "7.0.2",
		"storybook": "^7.3.1",
		"tslib": "2.6.1",
		"typescript": "5.1.6",
		"vite": "^4.4.9",
		"vite-tsconfig-paths": "^4.2.0",
		"vitest": "0.34.1"
	},
