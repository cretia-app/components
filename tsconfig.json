{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"declaration": true,
		"declarationDir": "types",
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"jsx": "react-jsx",
		"lib": ["DOM"],
		"module": "ES2020",
		"moduleResolution": "Bundler",
		"noImplicitAny": true,
		"outDir": "dist",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2018"
	},
	"exclude": ["dist", "node_modules", "src/**/*.stories.tsx"],
	"include": ["src/**/*", "rollup.config.js"]
}
